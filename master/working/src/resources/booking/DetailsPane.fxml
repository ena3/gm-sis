<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableView?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.booking.DetailsPaneController"
            id="detailsPane" fx:id="detailsPane">
    <top>
        <HBox id="detailsTitle">
            <Text>Add Booking</Text>
        </HBox>
    </top>
    <center>
        <GridPane id="detailsGridPane" fx:id="detailsGridPane">
            <!-- Booking id, not editable -->
            <Label GridPane.rowIndex="0" GridPane.columnIndex="0">Booking ID</Label>
            <TextField GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="2"
                fx:id="bookingIDTextField"></TextField>

            <!-- Select a customer -->
            <Label GridPane.rowIndex="1" GridPane.columnIndex="0">Customer</Label>
            <TextField GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="2"
                       fx:id="customerSearchBar" onAction="#selectCustomer"></TextField>

            <!-- Select a vehicle -->
            <Label GridPane.rowIndex="2" GridPane.columnIndex="0">Vehicle</Label>
            <ComboBox GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="2"
                      fx:id="vehicleComboBox"></ComboBox>

            <Label GridPane.rowIndex="3" GridPane.columnIndex="0">Description</Label>
            <TextArea GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.columnSpan="2"
                      fx:id="descriptionTextArea" id="descriptionTextArea"></TextArea>

            <!-- Diagnosis date and time -->
            <Label GridPane.rowIndex="4" GridPane.columnIndex="0">Diagnosis Date</Label>
            <DatePicker GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.columnSpan="2"
                        fx:id="diagnosisDatePicker"></DatePicker>
            <Label GridPane.rowIndex="5" GridPane.columnIndex="0">Diagnosis Time</Label>
            <TextField GridPane.rowIndex="5" GridPane.columnIndex="1"
                       fx:id="diagnosisStartTimeTextField"></TextField>
            <TextField GridPane.rowIndex="5" GridPane.columnIndex="2"
                       fx:id="diagnosisEndTimeTextField"></TextField>

            <!-- Repair date and time -->
            <Label GridPane.rowIndex="6" GridPane.columnIndex="0">Repair Date</Label>
            <DatePicker GridPane.rowIndex="6" GridPane.columnIndex="1" GridPane.columnSpan="2"
                        fx:id="repairDatePicker"></DatePicker>
            <Label GridPane.rowIndex="7" GridPane.columnIndex="0">Repair Time</Label>
            <TextField GridPane.rowIndex="7" GridPane.columnIndex="1"
                       fx:id="repairStartTimeTextField"></TextField>
            <TextField GridPane.rowIndex="7" GridPane.columnIndex="2"
                       fx:id="repairEndTimeTextField"></TextField>

            <!-- Mechanic tasked on repair -->
            <Label GridPane.rowIndex="8" GridPane.columnIndex="0">Mechanic</Label>
            <ComboBox GridPane.rowIndex="8" GridPane.columnIndex="1" GridPane.columnSpan="2"
                      fx:id="mechanicComboBox"></ComboBox>

            <!-- Parts needed for repair -->
            <Label GridPane.rowIndex="9" GridPane.columnIndex="0">Parts</Label>
            <TableView GridPane.rowIndex="9" GridPane.columnIndex="1" GridPane.columnSpan="2"
                       id="bookingPartsTable" fx:id="partsTable"></TableView>
        </GridPane>
    </center>
    <bottom>
        <HBox id="detailsButtons">
            <Button onAction="#addBooking">Save Booking</Button>
            <Button>Subcontract</Button>
            <Button onAction="#clearDetails">New Booking</Button>
        </HBox>
    </bottom>
</BorderPane>